<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_blue_grey_950"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                tools:context="com.wordpress.logitopia.freestlye.GameScreenActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/math_display_id"
        android:text="@string/mathDisplayText"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/primary_dark_material_light"/>



     <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/answer_display_id"-->
        <!--android:text="@string/answerDisplayText"-->
        <!--android:layout_marginTop="20dp"/>-->

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_answer_id"
            android:text="@string/enterAnswerText"
            android:textSize="50sp"
            android:background="@color/primary_dark_material_light"/>

        <!--<Space-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="30dp"/>-->


        <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:orientation="horizontal"
         android:layout_gravity="center"
         android:gravity="top|right">

            <TextView
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:id="@+id/score_display_id"
                android:text=""/>





<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:rowCount="4"
    android:columnCount="3">


         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="10dp"
             android:id="@+id/number_7_button_id"
             android:text="@string/seven"
             android:background="@color/accent_material_light"
             android:onClick="number_7_button_click"/>

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="10dp"
             android:id="@+id/number_8_button_id"
             android:text="@string/eight"
             android:background="@color/accent_material_light"/>

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:paddingLeft="10dp"
             android:id="@+id/number_9_button_id"
             android:text="@string/nine"
             android:background="@color/accent_material_light"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_4_button_id"
                android:text="@string/four"
                android:background="@color/accent_material_light"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_5_button_id"
            android:text="@string/five"
            android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_6_button_id"
        android:text="@string/six"
        android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_1_button_id"
        android:text="@string/one"
        android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_2_button_id"
        android:text="@string/two"
        android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_3_button_id"
        android:text="@string/three"
        android:background="@color/accent_material_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete_button_id"
        android:text="@string/del"
        android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_0_button_id"
        android:text="@string/zero"
        android:background="@color/accent_material_light"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_button_id"
        android:text="@string/ent"
        android:background="@color/accent_material_light"/>


</GridLayout>


        </LinearLayout>





    </LinearLayout>


</LinearLayout>
